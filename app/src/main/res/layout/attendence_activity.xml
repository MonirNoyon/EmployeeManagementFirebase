<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Attendence"
        android:textColor="#DD6A79"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center|top"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Spinner
            android:id="@+id/spinner_monthslctid"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="4">

        <TextView
            android:id="@+id/presenttextview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_back"
            android:gravity="center"
            android:text="Present"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/leavetextview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_back"
            android:gravity="center"
            android:text="Leave"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/halfdaytextview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/text_back"
            android:gravity="center"
            android:text="Half Day"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="4">

        <TextView
            android:id="@+id/latetextview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_back"
            android:gravity="center"
            android:text="Late"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/absenttextview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/text_back"
            android:gravity="center"
            android:text="Absent"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/vivoteam_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:text="\u0040 vivo Barishal Team"
        android:textColor="#DF475B"
        android:textSize="20sp" />
</LinearLayout>