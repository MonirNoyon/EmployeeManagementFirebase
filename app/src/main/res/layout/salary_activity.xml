<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Salary Details"
                android:textColor="#BD5A67"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >
                <Spinner
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/month_salaryid"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_transparent"
                    />
                <Spinner
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/year_salaryid"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_transparent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="4">

                <TextView
                    android:id="@+id/empbasic_salary"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Basic Salary"
                   />

                <TextView
                    android:id="@+id/emphouse_rent"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="House Rent"
                    />

                <TextView
                    android:id="@+id/emp_medical_allowance"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Medical Allowance"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="4">

                <TextView
                    android:id="@+id/empfood_allowance"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Food Allowance"
                     />

                <TextView
                    android:id="@+id/emptranspot_allwnce"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Transportation Allowance"
                     />

                <TextView
                    android:id="@+id/empmobil_bill"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Mobile Bill"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="4">

                <TextView
                    android:id="@+id/empkpi"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Kpi"
                    />

                <TextView
                    android:id="@+id/emp_incentiveid"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Incentive"
                    />

                <TextView
                    android:id="@+id/empsales_commisionid"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Sales Commission"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="4">

                <TextView
                    android:id="@+id/empotheraddition_id"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="(Others) Addition"
                    />

                <TextView
                    android:id="@+id/emptax_deductionid"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Tax (Deduction)"
                    />

                <TextView
                    android:id="@+id/empother_deductionid"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_back"
                    android:gravity="center"
                    android:text="Others Deduction"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/empgross_salary"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="30sp"
                android:background="@drawable/gross_back"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/vivoteam_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="bottom"
                android:text="\u0040 vivo Barishal Team"
                android:textColor="#DF475B"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>