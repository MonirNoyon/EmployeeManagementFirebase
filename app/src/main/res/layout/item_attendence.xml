<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prof_imageid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:src="@drawable/ic_person_black_24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:weightSum="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:text=" Hossain"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:text="01993422911"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioattendence_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/present_radio_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present" />

                <RadioButton
                    android:id="@+id/leave_radio_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave" />

                <RadioButton
                    android:id="@+id/half_radio_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Half-day" />

                <RadioButton
                    android:id="@+id/late_radio_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Late" />

                <RadioButton
                    android:id="@+id/absent_radio_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>